package net.mg2013.utils
{

	public class BitwiseFlagsUtil
	{
		//////////////
		////////////// CONSTRUCTOR ------------------------------------------------------------------------------------------- CONSTRUCTOR //////////////////////
		//////////////
		public static function removeFlag(flagStorage:uint, flag:uint):uint
		{
			if (hasFlag(flagStorage, flag))
			{
				flagStorage -= flag;
			}
			return flagStorage;
		}

		public static function hasFlag(flagStorage:uint, flag:uint):Boolean
		{
			return (flagStorage & flag) > 0;
		}
